<div class="container mt-5">
  <h1>Index</h1>
  <div class="container cards mt-2">
    <% @lists.each do |list| %>
      <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('default.jpg') %>)">>
       <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
  <%= link_to "Add New", new_list_path , class:'btn btn-primary mt-2' %>
</div>
